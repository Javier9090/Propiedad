{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Propiedad list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Calle</th>
                <th>Numero</th>
                <th>Piso</th>
                <th>Departamento</th>
                <th>Estado</th>
                <th>Precio</th>
                <th>Cantidadambientes</th>
                <th>Cantidadbanios</th>
                <th>Observaciones</th>
                <th>Zona</th>
                <th>Tipo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('propiedades_propiedad_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.calle }}</td>
                <td>{{ entity.numero }}</td>
                <td>{{ entity.piso }}</td>
                <td>{{ entity.departamento }}</td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.precio }}</td>
                <td>{{ entity.cantidadAmbientes }}</td>
                <td>{{ entity.cantidadBanios }}</td>
                <td>{{ entity.observaciones }}</td>
                <td>{{ entity.Zona.nombre }}</td>
                <td>{{ entity.TipoPropiedad.nombre }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('propiedades_propiedad_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('propiedades_propiedad_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('propiedades_propiedad_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
