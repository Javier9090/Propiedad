{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Propiedad</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Calle</th>
                <td>{{ entity.calle }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ entity.numero }}</td>
            </tr>
            <tr>
                <th>Piso</th>
                <td>{{ entity.piso }}</td>
            </tr>
            <tr>
                <th>Departamento</th>
                <td>{{ entity.departamento }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ entity.estado }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ entity.precio }}</td>
            </tr>
            <tr>
                <th>Cantidadambientes</th>
                <td>{{ entity.cantidadAmbientes }}</td>
            </tr>
            <tr>
                <th>Cantidadbanios</th>
                <td>{{ entity.cantidadBanios }}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ entity.observaciones }}</td>
            </tr>
            <tr>
                <th>Zona</th>
                <td>{{ entity.Zona.nombre }}</td>
            </tr>
            <tr>
                <th>Tipo de Propiedad</th>
                <td>{{ entity.TipoPropiedad.nombre }}</td>
            </tr>
			<th>Caracteristicas</th>
			 {% for c in ca %}
			 <tr>
			 
			 <td>{{ c.nombre }}</td>
			 
			 </tr>
			 {% endfor %}
           
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('propiedades_propiedad') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('propiedades_propiedad_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
